<% charts.each_with_index do |(fuel_type, chart_type_config), index| %>
  <div id="chart_wrapper_<%= index %>" class="col-sm">
    <div class="d-flex justify-content-between align-items-center">

      <div class="h4"><%= fuel_type.to_s.titleize %></div>

      <% if [Schools::Configuration::TEACHERS_GAS, Schools::Configuration::TEACHERS_STORAGE_HEATERS].include?(chart_type_config[:chart_type]) %>
        <span class="very-small" title="This chart automatically adjusts the school's gas consumption for outside temperature, removing the effect of changes in outside temperature">(Adjusted for outside temperature)</span>
      <% end %>

      <% if chart_type_config[:explore] %>
        <div>
          Explore
          <%= link_to 'weekly', school_usage_path(school, period: :weekly, supply: fuel_type), title: "See how the school's energy use varies over a week" %>
          /
          <%= link_to 'daily', school_usage_path(school, period: :daily, supply: fuel_type), title: "See how the school's energy use varies over a day" %>
          usage
        </div>
      <% end %>
    </div>

    <%= chart_tag(@school, chart_type_config[:chart_type], index: index, show_advice: false, no_zoom: true, chart_config: {y_axis_units: 'gb_pounds'}) %>

  </div>
<% end %>
