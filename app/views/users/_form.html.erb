<%= simple_form_for(user) do |f| %>

  <%= f.input :name %>
  <%= f.input :email %>
  <%= f.input :password %>
  <%= f.input :role, collection: User.roles.keys, label_method: :titleize %>
  <%= f.input :school_id, collection: @schools, hint: 'For staff and school admins'%>
  <%= f.input :school_group_id, collection: @school_groups, hint: 'For group admins'%>

  <%= f.input :staff_role_id, label: 'Staff role', collection: StaffRole.order(:title), label_method: :title, hint: 'For school admins and staff'%>

  <%= f.submit class: 'btn btn-primary' %>
<% end %>
