<% content_for :page_title, 'Scoreboard' %>

<div class="container mt-2">
  <div class="row">
    <div class="col-md-12">
      <h1>Scoreboard: <%= @scoreboard.name %></h1>
      <p>See how well each of our <%= @scoreboard.name%> Energy Sparks schools are recording their energy saving <%= link_to 'activities', activity_categories_path %>! Scoreboard points are earned from recording <%= link_to 'activities', activity_categories_path %> investigating energy use, learning about energy and taking energy saving action around their school.</p>
    </div>
  </div>

  <div class="row">
    <table id='scoreboard' class='table'>
      <thead>
      <tr>
        <th><h4>Position</h4></th>
        <th><h4>School</h4></th>
        <th><h4>Score</h4></th>
      </tr>
      </thead>

      <tbody>
      <% @schools.each_with_index do |school, i| %>
          <tr>
            <% if school.sum_points %>
              <td scope="row">
                <h2><span class="badge badge-primary"><%= i+1 %></span></h2>
              </td>
              <td>
                <h2><%= link_to school.name, school_path(school) %></h2>
              </td>
              <td>
                <h2>
                  <%= link_to school.sum_points, school_timeline_path(school), class: 'badge badge-success' %>
                  &nbsp;
                  <% if school.points_since > 0 %>
                    <i class="fa fa-arrow-up" data-toggle="tooltip" title="School has scored points in the last month"></i>
                  <% end %>
                </h2>
              </td>
            <% else %>
              <td />
              <td>
                <h2><%= link_to school.name, school_path(school) %></h2>
              </td>
              <td />
            <% end %>
          </tr>
      <% end %>
      </tbody>
    </table>

  </div>
</div>
