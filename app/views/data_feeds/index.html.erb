<h1>Data Feeds</h1>
 <table class="table">
  <thead>
    <tr>
      <th>Data Feed</th><th>Type</th><th>Download from DB</th><th>Download from DB (month)</th><th>Download from Rake job</th><th>Last reading</th>
    </tr>
  </thead>
  <tbody>
    <% @data_feeds.each do |data_feed| %>
      <% data_feed.data_feed_readings.group_by { |p| p.feed_type }.each do |feed_type, feed_type_readings| %>
        <tr class=<%= class_for_last_date(feed_type_readings.sort_by { |r| r.at }.first.at) %>>
          <td><%= data_feed.title %></td>
          <td><%= feed_type.humanize %></td>
          <td><%= link_to 'Download last day as CSV from DB', data_feed_path(data_feed, feed_type: feed_type, format: :csv), format: :csv %></td>
          <td><%= link_to 'Download last month as CSV from DB', data_feed_path(data_feed, feed_type: feed_type, start_date: Date.today - 1.month, end_date: Date.today, format: :csv), format: :csv %></td>
          <td><%= link_to 'Download last produced CSV from rake', "/public/downloads/bath#{feed_type}data.csv" %></td>
          <td><%= nice_dates feed_type_readings.sort_by { |r| r.at }.last.at %></td>
          <td><%#= link_to 'Delete', data_feed_path(data_feed), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
        </tr>

      <% end %>
    <% end %>
  </tbody>
</table>