<% content_for :page_title do %>
    Admin Reports
<% end %>
<div class="application container">
  <div class="row padded-row">
    <div class="col-md-9">
      <h1>AMR Data report for active meters</h1>
    </div>
  </div>

  <p><%= link_to 'Reports index', reports_path %></p>

  <div class="row">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>School</th><th>Meter</th><th>Aggregated Meter</th><th>Supply</th>
        </tr>
      </thead>
      <tbody>
        <% @meters.each do |meter| %>
          <tr>
            <td>
              <%= link_to(meter.school.name, school_path(meter.school)) %>
            </td>
            <td>
              <%= link_to(meter.display_name, reports_amr_data_show_path(meter)) %>
            </td>
            <td>
              <%= link_to(meter.display_name, reports_aggregated_amr_data_show_path(meter)) %>
            </td>
            <td>
              <%= meter.meter_type.capitalize %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
