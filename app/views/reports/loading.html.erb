<% content_for :page_title do %>
    Admin Reports
<% end %>
<div class="application container">
  <div class="row padded-row">
    <div class="col-md-9">
      <h1>Loading Report</h1>
    </div>
  </div>
  <div class="row">
    <table class="table">
      <thead>
        <tr>
          <th>School</th><th>Meter</th><th>Supply</th><th>First Reading</th><th>Last Reading</th>
        </tr>
      </thead>
      <tbody>
        <% @schools.each do |school| %>
            <% school.meters.each do |meter| %>
              <tr>
                <td>
                  <%= link_to(school.name, school_path(school)) %>
                </td>
                <td>
                  <%= meter.display_name %>
                </td>
                <td>
                  <%= meter.meter_type %>
                </td>
                <td>
                  <%= meter.first_read %>
                </td>
                <td>
                  <%= meter.last_read %>
                </td>
              </tr>
            <% end %>
        <% end %>

      </tbody>
    </table>
  </div>
</div>
