<% content_for :page_title, @title %>


<div class="d-flex justify-content-between align-items-center">
  <div>
    <%= link_to 'Back', request.referer.present? ? request.referer : pupils_school_analysis_path(@school), class: 'btn btn-rounded' %>
  </div>
  <div>
    <h1><%= @title %></h1>
  </div>
  <div></div>
</div>
<hr />


<div id="chart_wrapper_1">
  <div class='analysis_controls'>
    <div class="d-flex justify-content-between" role="group">
      <div>
        <button class="btn btn-rounded move_back" disabled>
          Back 1 <span class='period'>period</span>
        </button>
      </div>
      <div>
        <button class="btn btn-rounded drillup">
          Up to <span class='period'>period</span> view
        </button>
      </div>
      <div>
        <button class="btn btn-rounded move_forward" disabled>
          Forward 1 <span class='period'>period</span>
        </button>
      </div>
    </div>
  </div>

  <%= chart_tag(@school, @chart_type.to_s, index: 1, show_advice: false, no_zoom: true, chart_config: {y_axis_units:  @measurement, transformations: []}) %>

</div>
