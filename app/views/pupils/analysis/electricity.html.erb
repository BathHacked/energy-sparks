<% content_for :page_title, "Here's the electricity data for your school" %>

<div class="d-flex justify-content-between align-items-center">
  <div>
    <%= link_to 'Back',  pupils_school_analysis_path(@school), class: 'btn btn-rounded' %>
  </div>
  <div>
    <h1>Here's the <strong>electricity</strong> data for your school</h1>
  </div>
  <div></div>
</div>
<hr />

<h2>I want to find out&hellip;</h2>

<div class="card-deck">
  <div class="card electricity-dark electricity-card m-4">
    <div class="card-body p-4">
      <%= link_to pupils_school_analysis_tab_path(@school, energy: :electricity, presentation: :when), class: 'h2 stretched-link text-decoration-none' do %>
        <strong>when</strong> the electricity was used
      <% end %>
    </div>
  </div>
  <div class="card electricity-dark electricity-card m-4">
    <div class="card-body p-4">
      <%= link_to '#', class: 'h2 stretched-link text-decoration-none' do %>
        <strong>how much</strong> the electricity cost
      <% end %>
    </div>
  </div>
</div>

<h2>I want to look at&hellip;</h2>

<div class="card-deck">
  <div class="card electricity-dark electricity-card m-4">
    <div class="card-body p-4 text-center">
      <div class="p-4">
        <%= fa_icon "chart-pie-alt fa-3x" %>
      </div>
      <%= link_to '#', class: 'h2 stretched-link text-decoration-none' do %>
        Pie charts
      <% end %>
    </div>
  </div>
  <div class="card electricity-dark electricity-card m-4">
    <div class="card-body p-4 text-center">
      <div class="p-4">
        <%= fa_icon "chart-bar fa-3x" %>
      </div>
      <%= link_to '#', class: 'h2 stretched-link text-decoration-none' do %>
        Bar charts
      <% end %>
    </div>
  </div>
  <div class="card electricity-dark electricity-card m-4">
    <div class="card-body p-4 text-center">
      <div class="p-4">
        <%= fa_icon "chart-line-down fa-3x" %>
      </div>
      <%= link_to '#', class: 'h2 stretched-link text-decoration-none' do %>
        Line graphs
      <% end %>
    </div>
  </div>
</div>
