<div class="row padded-row">
  <div class="col-lg-10">
    <h3><%= name %></h3>
  </div>
  <div class="col-lg-2">
    <%= link_to 'View scoreboard', scoreboard_path(scoreboard), class: 'btn btn-primary float-right'  %>
  </div>
</div>
<% schools.each_slice(3) do |row| %>
  <div class="row school-card-row">
    <div class="col-lg-12">
      <div class="card-deck">
        <% row.each do |school| %>
          <%= render partial: 'schools/school_card', locals: {school: school} %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
