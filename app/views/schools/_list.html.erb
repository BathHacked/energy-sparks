<div class="row padded-row">
  <div class="col-lg-7">
    <h3><%= name %></h3>
  </div>
  <% if scoreboard  || benchmark_filter %>
    <div class="col-lg-5">
      <div class='btn-group float-right'>
        <%= link_to 'Compare schools', benchmarks_path(benchmark: benchmark_filter ), class: 'btn' if benchmark_filter && can?(:read, BenchmarkResult) %>
        <%= link_to "View #{local_assigns[:scoreboard_name] || 'scoreboard'}", scoreboard_path(scoreboard), class: 'btn btn-primary float-right' if scoreboard %>
      </div>
    </div>
  <% end %>
</div>
<% schools.each_slice(3) do |row| %>
  <div class="row school-card-row">
    <div class="col-lg-12">
      <div class="card-deck">
        <% row.each do |school| %>
          <%= render partial: 'schools/school_card', locals: {school: school} %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
