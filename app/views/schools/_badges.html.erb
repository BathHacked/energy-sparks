<div class="row padded-row">
  <div class="col-md-12">
    <h5>Latest Badge</h5>
    <% if @badges.empty? %>
        <p>No achievements have been awarded yet</p>
    <% else %>
        <%= image_tag("#{@badges.last.image}_on.png", height: 100, width: 100) %>
        <p>
          <%= link_to 'See all badges', achievements_school_path(@school) %>
        </p>
    <% end %>
  </div>
</div>
