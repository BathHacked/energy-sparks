<div class="row padded-row">
  <div class="col-lg-7">
    <div class="nav-anchor">
      <a name="<%= name.parameterize %>"> </a>
      <h1><%= name %></h1>
    </div>
  </div>
  <% if scoreboard  || benchmark_filter %>
    <div class="col-lg-5">
      <div class='btn-group float-right'>
        <% if can?(:compare, school_group) %>
          <%= link_to 'Compare schools', benchmarks_path(benchmark: benchmark_filter ), class: 'btn' if benchmark_filter %>
        <% end %>
        <% if can?(:read, scoreboard) %>
          <%= link_to 'Scoreboard', scoreboard_path(scoreboard), class: 'btn btn-primary float-right' if scoreboard %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
