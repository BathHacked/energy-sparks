<h1>Editing School Alert</h1>
<h2><%= @alert.alert_type.title %></h2>
<% if @school.contacts.empty? %>
  <p>Please create some contacts so that you can allocate them to this alert</p>
  <p><%= link_to 'New Contact', new_school_contact_path(@school), class: 'btn btn-secondary' %></p>
  <div class="other-actions">
    <%= link_to 'Back', school_alerts_path(@school), class: 'btn btn-secondary' %>
  </div>
<% else %>

  <%= form_for([@school, @alert]) do |f| %>
    <% if @alert.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@alert.errors.count, "error") %> prohibited this alert from being saved:</h2>
        <ul>
          <% @alert.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <p>Energy Sparks will send a message to each of these contacts when the alert is triggered. You can add more contacts using the Add new contact button.</p>
    <%= f.collection_check_boxes(:contact_ids, @school.contacts, :id, :display_name) do |b| %>
      <div class="custom-control custom-checkbox">
        <%= b.check_box(class: "custom-control-input") %>
        <%= b.label(class: "custom-control-label") do %>
          <%= b.object.display_name %>
        <% end %>
      </div>
    <% end %>
    <div class="row other-actions">
      <p>
        <%= f.submit "Save alert", class: 'btn btn-primary' %>
        <%= link_to 'Add new contact', new_school_contact_path(@school), class: 'btn btn-success' %>
        <%= link_to 'Back', school_alerts_path(@school), class: 'btn btn-secondary' %>
      </p>
    </div>
  <% end %>
<% end %>
