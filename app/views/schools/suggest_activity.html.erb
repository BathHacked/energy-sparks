<% content_for :page_title do %>
    Choose the next activity for <%= @school.name %>
<% end %>
<div class="application container">

  <div class="row padded-row">
    <div class="col-md-12">
      <h1>Choose your next activity</h1>
    </div>
  </div>

  <div class="card-deck">
    <div class="card activity-card">
      <div class="card-header"></div>
      <div class="card-body">
        <h2 class="card-title">Already completed an activity?</h2>
        <p class="card-text">
          If you've completed an activity then you can go ahead and record it now
        </p>
        <div class="card-footer text-right">
          <%= link_to 'Record your activity', new_school_activity_path(@school), class: 'btn btn-success' %>
        </div>
      </div>
    </div>

    <div class="card secondary-card">
      <div class="card-header"></div>

      <div class="card-body">
        <h2 class="card-title">Want some help choosing your next activity?</h2>
        <p class="card-text">
          Below you can see some suggested activities for your school. Or you can look at the full list of activities
        </p>

        <div class="card-footer text-right">
          <%= link_to "View the full list of activities", activity_categories_path, class: 'btn btn-secondary' %>
        </div>

      </div>
    </div>
  </div>

  <div class="row padded-row">
    <div class="col-md-12">
      <h2>Some suggested activities for your school</h2>
      <p>
        Here are some suggested activities for your school. We've chosen one activity from each category. You can also
        see how many points you can earn from each activity.
      </p>
    </div>
  </div>

  <% @activity_categories.in_groups_of(3, nil) do |group| %>
      <div class="card-deck <%= group.include?(nil) ? 'padded-row' : ''%>">
        <% group.each do |category| %>
            <% if category.present? %>
                <% activity = category.activity_types.where("name != ?", "Other").sample(1).first %>
                <div class="card activity-card">
                  <div class="card-header">
                    <p><span class="badge badge-success"><%= activity.score %></span>
                    <span class="badge badge-secondary"><%= category.name %></span></p>
                  </div>
                  <div class="card-body">
                    <h4 class="card-title"><%= activity.name %></h4>
                    <p class="card-text">
                      Lorem ipsum
                    </p>
                  </div>
                  <div class="card-footer text-right">
                    <%= link_to 'Read about this activity', activity_type_path(activity), class: 'btn btn-primary' %>
                  </div>
                </div>
            <% else %>
                <div class="card secondary-card">
                  <div class="card-header">

                  </div>
                  <div class="card-body">
                    <h4 class="card-title">Want some other suggestions?</h4>
                    <p class="card-text">
                      You can also design your own activities, you can still score points for these when you
                      record them using the <%= link_to 'activity form', new_school_activity_path(@school) %>. For more
                      ideas have a look at our full list of activities.
                    </p>

                  </div>
                  <div class="card-footer text-right">
                    <%= link_to 'View the full list of activities', activity_categories_path, class: 'btn btn-secondary' %>
                  </div>
                </div>
            <% end %>
        <% end %>
      </div>
  <% end %>

  <p></p>
</div>