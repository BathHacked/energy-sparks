<% content_for :page_title, @content.find_out_more_title %>

<h4 class="pt-4"><%= sanitize @content.find_out_more_title %></h4>

<div class="row justify-content-md-center align-items-center">
  <% if @tables.empty? %>
    <div class="col col-lg-10">
      <%= render 'schools/find_out_more/chart', school: @school, chart: @chart, content: @content if @chart %>
    </div>
  <% else %>
    <div class="col col-lg-6">
      <%= render 'schools/find_out_more/chart', school: @school, chart: @chart, content: @content if @chart %>
    </div>
    <div class="col-md-auto">
      <% @tables.each do |table| %>
        <table class="table table-striped">
          <thead class="thead-dark">
            <tr>
              <% table_headers_from_array(table).each do |column, html_class| %>
                <th class="<%= html_class %>"><%= column %></th>
              <% end  %>
            </tr>
          </thead>
          <tbody>
            <% table_body_from_array(table).each do |row| %>
              <tr>
                <% table_row_from_array(row).each do |column, html_class| %>
                  <td class="<%= html_class %>"><%= column %></td>
                <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% end %>
    </div>
  <% end %>
</div>
<div class="row">
  <div class="col-md-7">
    <%= @content.find_out_more_content %>
  </div>
  <div class="col-md-5 activities">
    <% unless @activity_types.empty? %>
      <h2>Activities which will help</h2>
      <% @activity_types.each do |activity_type| %>
        <%= render 'activity_types/card', activity_type: activity_type %>
      <% end %>
    <% end %>
  </div>
</div>
