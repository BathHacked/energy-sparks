<h1>Your energy saving actions</h1>

<p><%= link_to 'Record an energy saving action', new_school_action_path(@school), class: 'btn btn-primary' %></p>

<table class="table table-borderless">
  <% @interventions.group_by{|intervention| [intervention.at.strftime("%Y"), intervention.at.strftime("%B")]}.each do |(year, month), interventions|%>
    <thead>
      <tr>
        <th colspan="3">
          <span class="float-right"><%= pluralize(interventions.size, 'action') %></span>
          <h2><%= month %> <span class="h3"><%= year %></span></h2>
        </th>
      </tr>
    </thead>
    <tbody>
      <% interventions.each do |intervention| %>
        <tr scope="row">
          <td class="p-3 text-center">
            <%= fa_icon("#{intervention.intervention_type.intervention_type_group.icon} fa-2x") %>
          </td>
          <td>
            <h4><%= intervention.intervention_type.title %></h4>
            <%= nice_dates(intervention.at) %>
          </td>
          <td>
            <div class="btn-group">
              <%= link_to 'Edit', edit_school_intervention_path(@school, intervention), class: 'btn btn-warning' %>
              <%= link_to 'Delete', school_intervention_path(@school, intervention), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>
