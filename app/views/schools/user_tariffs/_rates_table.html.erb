<table class="table table-charges">
  <tbody>
  <% if user_tariff.user_tariff_prices.any? %>
    <% user_tariff.user_tariff_prices.by_start_time.each do |user_tariff_price| %>
      <tr>
        <td class="description"><%= user_tariff_price_title(user_tariff_price) %></td>
        <td class="value"><%= number_to_currency(user_tariff_price.value, unit: 'Â£') %> per kWh</td>
        <% if allow_edits %>
          <td class="value">
            <%= link_to "Edit", edit_school_user_tariff_user_tariff_differential_price_path(school, user_tariff, user_tariff_price), {class: 'btn user-tariff-show-button', remote: true, 'data-toggle' =>  "modal", 'data-target' => '#modal-window'} %>
            <%= link_to "Delete", school_user_tariff_user_tariff_differential_price_path(school, user_tariff, user_tariff_price), method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-danger user-tariff-show-button' %>
          </td>
        <% end %>
      </tr>
    <% end %>
  <% else %>
    <tr>
      <td colspan='10'>
        No consumption charges specified yet
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
