<div class="modal" tabindex="-1" id="rate-modal-flat" role="dialog" data-calendar="123">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title"><span class="event-action"></span> Rate</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>



      <div class="modal-body">


        <span class="form-group">
          <%= label_tag 'Rate (Â£)' %>
          <%= number_field_tag :rate %>
        </span>

        per

        <span class="form-group">
          <%= select_tag :rate_unit, options_for_select(['kwh']) %>
        </span>


      </div>

      <%= simple_form_for :tariff, url: request.url, method: :get, html: { id: 'event_form', class:"form-horizontal calendar_event_form"}  do |f| %>
      <div class="modal-footer">
        <%= hidden_field_tag :step, params[:step] %>
        <%= render 'hidden_fields' %>
        <button type="button" class="btn" data-dismiss="modal">Cancel</button>
        <%= f.submit 'Save', class: 'btn btn-primary' %>
      </div>
      <% end %>
    </div>
  </div>
</div>
