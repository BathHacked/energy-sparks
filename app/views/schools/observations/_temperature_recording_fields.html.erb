<fieldset>
  <div class="form-row">
    <div class="col-md-6 form-group">


  <%= temperature_form.input :centigrade, as: :number, required: false, label: "Temperature" do %>
     <div class="input-group">
        <div class="input-group-prepend">
          <span class="input-group-text"><%= fa_icon('temperature-high') %></span>
        </div>
        <%= temperature_form.input_field :centigrade, hint: 18, class: "form-control form-control-lg temperature" %>
          <div class="input-group-append">
            <span class="input-group-text">&deg; C</span>
          </div>
     </div>
  <% end %>
      <% if temperature_form.index.zero? %>
        <small class='form-text text-muted'>Enter the temperature in centigrade as a number</small>
      <% end %>
    </div>

    <%= temperature_form.simple_fields_for :location do |location_form| %>
      <div class="col-md-6 form-group">
        <%= location_form.hidden_field :school_id, value: @school.id %>
        <%= location_form.label :name, :place do %>Place<% end %>
        <div class="input-group">
          <div class="input-group-prepend">
            <div class="input-group-text">
              <%= fa_icon('school') %>
            </div>
          </div>
          <% if @location_names.present? %>
            <%= location_form.text_field :name, class: "form-control form-control-lg awesomplete", data: { list: @location_names } %>
          <% else %>
           <%= location_form.text_field :name, class: "form-control form-control-lg"  %>
          <% end %>
        </div>
        <% if temperature_form.index.zero? %>
          <small class='form-text text-muted'>For example: Class 1</small>
        <% end %>
      </div>
    <% end %>
  </div>
</fieldset>
