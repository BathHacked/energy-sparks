<div class="row alert <%= colour == 'bg-negative' ? 'text-white' : 'text-dark' %> <%= colour %>" role="alert">
  <div class="col-1">
    <%= fa_icon(icon) %>
  </div>

  <% if buttons %>
    <div class='<%= "col-lg-#{11 - buttons.size * 3}" %>'>
      <%= content %>
    </div>
    <% buttons.each do |title, path| %>
      <div class="col-lg-3">
        <%= link_to path do %>
          <button class="btn btn-light btn rounded-pill font-weight-bold"><%= sanitize title %></button>
        <% end %>
      </div>
    <% end %>
  <% else %>
    <div class="col-11">
      <h5><%= content %></h5>
    </div>
  <% end %>
</div>
