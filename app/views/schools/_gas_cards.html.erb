<% if @school.meters?(:gas) %>
    <section id="gas-cards">
      <% avg_gas = average_usage(:gas) %>
      <% latest_reading_date = @school.last_reading_date(:gas) %>

      <h4>Gas
        <span class="pull-right">
          <small>Latest data <%= l latest_reading_date unless latest_reading_date.nil? %></small>
        </span>
      </h4>

      <div class="dashboard">
        <div class="card-deck">
          <div class="card">
            <div class="card-header">
              <h4 class="card-title">Did you know?
              </h4>
            </div>

            <div class="card-body">
              <p>
                Based on our latest data, your school uses an average of
              </p>
              <h2>
                <strong><%= avg_gas[1].to_i unless avg_gas.nil? %></strong> kWh per day
              </h2>
              <p class="text-muted">
                Since <%= kid_date_no_year(avg_gas[0] - 7.days) %>
              </p>
            </div>
            <div class="card-footer text-right">
              <%= link_to(t('charts.hourly-usage-link'),
                          usage_school_path(@school, period: :hourly, supply: :gas),
                          class: 'btn btn-primary', title: "See how the school's energy use varies over a chosen day", "data-turbolinks": false) unless avg_gas.nil?
              %>

            </div>
          </div>

          <div class="card">
            <div class="card-header">
              <h4 class="card-title">Did you know?</h4>
            </div>

            <div class="card-body">
              <p>
                Based on our latest data, your school uses most energy on
              </p>
              <h2>
                <%= day_most_usage(:gas) %>
              </h2>
              <p class="text-muted">
                Since <%= kid_date_no_year(avg_gas[0] - 7.days) %>
              </p>
            </div>
            <div class="card-footer text-right">
              <%= link_to(t('charts.weekly-usage-link'),
                          usage_school_path(@school, period: :daily, supply: :gas),
                          class: 'btn btn-primary', title: "See how the school's energy use varies over a chosen week", "data-turbolinks": false) unless avg_gas.nil?
              %>

            </div>
          </div>

        </div>
      </div>

    </section>

<% end %>
