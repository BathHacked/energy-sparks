<div class="card">
  <div class="card-body">
    <% if school.active? %>
      <h3 class="card-title">
            <%= link_to school_path(school) do %>
              <%= school.name %>
            <% end -%>
      </h3>
      <div class="card-text"><%= school.address %> <%= school.postcode %></div>
    <% else %>
        <h6 class="card-title">
          <%= link_to school_path(school) do %>
              <%= school.name %>
          <% end -%>
        </h6>
    <% end %>
  </div>
</div>
