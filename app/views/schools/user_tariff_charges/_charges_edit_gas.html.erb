
<h2>Consumption and supply charges</h2>

<div class="fixed_charge">
  <%= f.fields_for :fixed_charge do |ff| %>
    <%= render 'charge_basic', charge_type: :fixed_charge, user_tariff_charge: user_tariff_charge_for_type(user_tariff_charges, :fixed_charge), f: ff %>
  <% end %>
</div>

<h2>Other charges</h2>

<%= f.fields_for :other do |ff| %>
  <%= render 'charge_basic', charge_type: :other, user_tariff_charge: user_tariff_charge_for_type(user_tariff_charges, :other), f: ff %>
<% end %>

<%= f.fields_for :user_tariff do |ff| %>
  <%= render 'charge_vat', user_tariff: user_tariff, f: ff %>
<% end %>

<%= f.fields_for :user_tariff do |ff| %>
  <%= render 'charge_ccl', user_tariff: user_tariff, f: ff %>
<% end %>

