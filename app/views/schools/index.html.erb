<% content_for :page_title do %>
Schools
<% end %>
<section id="enrolled">
  <div class="container">
    <div class="row padded-row">
      <div class="col-lg-12">
        <h2>Participating Schools</h2>

        <p>
          These schools are using <%= t('application') %> to reduce their energy usage. See their usage data, compare
          scores and awards and learn about their energy saving activities
        </p>

      </div>
    </div>
    <% @scoreboards.each do |scoreboard| %>
      <div class="row padded-row">
        <div class="col-lg-10">
          <h3><%= scoreboard.name %></h3>
        </div>
        <div class="col-lg-2">
          <%= link_to 'View scoreboard', scoreboard_path(scoreboard), class: 'btn btn-primary float-right'  %>
        </div>
      </div>
      <% scoreboard.schools.active.order(:name).each_slice(3) do |row| %>
          <div class="row school-card-row">
            <div class="col-lg-12">
                <div class="card-deck">
                  <% row.each do |school| %>
                      <%= render partial: 'schools/school_card', locals: {school: school} %>
                  <% end %>
                </div>
            </div>
          </div>
      <% end %>
    <% end %>

    <% if @ungrouped_active_schools.any? %>
      <div class="row padded-row">
        <div class="col-lg-12">
          <h3>Other schools</h3>
        </div>
      </div>
      <% @ungrouped_active_schools.each_slice(3) do |row| %>
          <div class="row school-card-row">
            <div class="col-lg-12">
                <div class="card-deck">
                  <% row.each do |school| %>
                      <%= render partial: 'schools/school_card', locals: {school: school} %>
                  <% end %>
                </div>
            </div>
          </div>
      <% end %>
    <% end %>

  </div>
</section>

<section id="eligible">
  <div class="container">
    <div class="row padded-row">
      <div class="col-lg-12">
        <% if current_user.try(:admin?) %>
          <h3>Inactive Schools</h3>
          <p>The following schools have not yet active.</p>
          <div class="card-columns">
            <% @schools_not_active.each do |school| %>
              <%= render partial: 'schools/school_card', locals: {school: school} %>
            <% end %>
        <% else %>
          <p>If your school has not been enrolled, but you would like to find out more, you can find out <%= link_to "how to get involved", enrol_path %>.</p>
        <% end %>
      </div>
    </div>
  </div>
</section>

<% if can? :manage, School -%>
  <%= link_to 'New School', new_school_path, class: 'btn btn-primary' %>
<% end %>

