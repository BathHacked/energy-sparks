<% @schools_enrolled.each_slice(3) do |row| %>
  <div class="row">
    <% row.each do |school| %>
      <div class="card alert alert-success col-md-3 offset-md-1">
        <%= link_to school_path(school), class: 'school-card' do %>
          <div class="card-block">
            <h3 class="card-title"><%= school.name %></h3>
            <%= school.school_type.try(:titleize) %>
          </div>
        <% end -%>
        <%- if can? :manage, school -%>
          <p class="pull-md-right">
            <%= link_to 'Edit', edit_school_path(school), class: 'btn btn-primary btn-sm' %>
            <%= link_to 'Delete', school_path(school), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
          </p>
        <%- end -%>
      </div>
    <% end %>
  </div>
<% end %>

<table class="table table-striped">
  <thead>
    <tr><th colspan="3">Schools not yet enrolled</th></tr>
  </thead>
  <tbody>
    <% @schools_not_enrolled.each do |school| %>
      <tr>
        <td><%= school.name %></h3></td>
        <td><%= school.school_type.try(:titleize) %></td>
        <td>
          <%- if can? :manage, school -%>
            <%= link_to 'Edit', edit_school_path(school), class: 'btn btn-primary btn-sm' %>
            <%= link_to 'Delete', school_path(school), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if can? :manage, School -%>
  <%= link_to 'New School', new_school_path, class: 'btn btn-primary' %>
<% end %>
