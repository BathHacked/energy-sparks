<h1>Schools</h1>

<table class="table table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Type</th>
      <th>Address</th>
      <th>Postcode</th>
      <th>Eco school status</th>
      <th>Website</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @schools.each do |school| %>
      <tr>
        <td><%= school.name %></td>
        <td><%= school.school_type.try(:titleize) %></td>
        <td><%= school.address %></td>
        <td><%= school.postcode %></td>
        <td><%= school.eco_school_status %></td>
        <td><%= school.website %></td>
        <td><%= link_to 'Show', school, class: 'btn btn-info' %></td>
        <td><%= link_to 'Edit', edit_school_path(school), class: 'btn btn-primary' %></td>
        <td><%= link_to 'Delete', school, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New School', new_school_path, class: 'btn btn-primary' %>
