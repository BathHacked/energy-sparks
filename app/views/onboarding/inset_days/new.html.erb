<h1>New inset day</h1>

<%= form_for(@calendar_event, url: onboarding_inset_days_path(@school_onboarding)) do |f| %>

  <div class="form-group">
    <%= f.label :title, 'Description'  %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :calendar_event_type_id, 'Event Type' %>
    <%= f.select :calendar_event_type_id, options_from_collection_for_select(@calendar_event_types, 'id', 'display_title',  @calendar_event.calendar_event_type_id),{}, { class: 'form-control' } %>
  </div>

  <div class="form-group">
    <%= f.label :start_date, 'Date' %>
    <%= text_field_tag("start_date_picker_#{f.index}",
              f.object.start_date.try(:strftime, "%d/%m/%Y"),
              placeholder: 'select date',
              class: 'form-control term_datepicker',
              data: { altfield: "#calendar_event_start_date" }
            ) %>
    <%= f.hidden_field :start_date %>
  </div>

  <div class="actions">
    <%= f.submit 'Add inset day', class: 'btn btn-primary' %>
    <%= link_to 'Back', :back, class: 'btn btn-secondary' %>
  </div>

<% end %>
