<!DOCTYPE html>
<html lang="en">
  <head>
    <%= render 'shared/head' %>
  </head>
  <body vocab="http://schema.org/" class="<%= 'sub-nav' if show_sub_nav?(@school, @hide_subnav) %>">
    <%= render 'shared/nav' %>
    <%= render 'shared/sub_nav' if show_sub_nav?(@school, @hide_subnav) %>
    <div class="application container <%= 'extra-padding' unless show_sub_nav?(@school, @hide_subnav) %>">
      <%= render 'shared/alerts' %>
      <%= yield %>
    </div>
    <%= render 'shared/footer' %>
    <%= content_for(:chartkick_js) %><!-- only used on usage pages, so only loaded on those pages -->
  </body>
</html>
