<% content_for :page_title, @school_group.name %>

<%= render 'schools/list', name: @school_group.name, scoreboard: @school_group.default_scoreboard, scoreboard_name: 'default scoreboard for group', schools: @school_group.schools.visible.order(:name), benchmark_filter: {school_group_ids: [@school_group.id]}%>

<% if can?(:read_invisible_schools, School) %>
  <%= render 'schools/list', name: 'Not visible schools', scoreboard: nil, schools: @school_group.schools.not_visible.order(:name), benchmark_filter: nil %>
<% end %>
