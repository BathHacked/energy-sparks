<% content_for :page_title, @school_group.name %>

<%= render 'schools/list_header', name: @school_group.name, scoreboard: @school_group.default_scoreboard, scoreboard_name: 'default scoreboard for group', benchmark_filter: {school_group_ids: [@school_group.id]}%>

<div class="map" id="geo-json-map"></div>

<%= render 'schools/list_cards', schools: @school_group.schools.visible.by_name %>

<% if @school_group.schools.not_visible.any? && can?(:read_invisible_schools, School) %>
  <%= render 'schools/list_header', name: 'Not visible schools', scoreboard: nil, benchmark_filter: nil %>
  <%= render 'schools/list_cards', schools: @school_group.schools.not_visible.by_name %>
<% end %>
