<h1>Activity history for <%= @school.name %></h1>

<table class="table table-condensed">
  <thead>
    <tr>
      <th>On</th>
      <th>Type</th>
      <th>Title</th>
      <th>Description</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @activities.each do |activity| %>
      <tr>
        <td><%= l activity.happened_on %></td>
        <td><%= activity.activity_type.name %></td>
        <td><%= activity.title %></td>
        <td><%= simple_format activity.description %></td>
        <td>
          <% if can? :manage, activity %>
            <%= link_to 'Edit', edit_school_activity_path(@school, activity), class: 'btn btn-primary btn-sm' %>
            <%= link_to 'Delete', school_activity_path(@school, activity), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if current_user.manages_school?(@school.id) %>
  <%= link_to 'New Activity', new_school_activity_path(@school), class: 'btn btn-primary' %>
<% end %>
