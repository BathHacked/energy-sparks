<h1>Activity Categories</h1>

<table class="table table-condensed">
  <thead>
    <tr>
      <th>Name</th>
    </tr>
  </thead>

  <tbody>
    <% @activity_categories.each do |activity_category| %>
      <tr>
        <td><%= activity_category.name %></td>
        <td><%= link_to 'Show', activity_category, class: 'btn btn-info' %></td>
        <td><%= link_to 'Edit', edit_activity_category_path(activity_category), class: 'btn btn-primary' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Activity Category', new_activity_category_path, class: 'btn btn-primary' %>
