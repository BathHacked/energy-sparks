<h1>Schools being onboarded</h1>

<%= link_to 'Onboard New School', new_admin_school_onboarding_path, class: 'btn btn-primary mb-3' %>

<table class="table table-sm">
  <thead>
    <tr>
      <th>School name</th>
      <th>Contact email</th>
      <th>Last activity</th>
      <th>last event</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @school_onboardings.each do |onboarding| %>
      <tr>
        <td><%= onboarding.school_name %></td>
        <td><%= onboarding.contact_email %></td>
        <td><%= onboarding.events.maximum(:created_at) %></td>
        <td><%= SchoolOnboardingEvent.events.key(onboarding.events.maximum(:event)) %></td>
        <td>
          <% unless onboarding.has_event?(:onboarding_complete) %>
            <%= button_to 'Send reminder email', admin_school_onboarding_reminder_path(onboarding), class: 'btn btn-warning btn-sm' %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
