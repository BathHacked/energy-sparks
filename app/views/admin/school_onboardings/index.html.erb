<h1>Schools being set up automatically</h1>

<%= link_to 'New Automatic School Setup', new_admin_school_onboarding_path, class: 'btn mb-3' %>

<h2>In progress schools</h2>

<p><%= link_to 'Download as CSV', admin_school_onboardings_path(format: :csv), class: 'btn' %>

<% @school_groups.each do |school_group| %>
  <h3><%= school_group.name %></h3>
  <% if school_group.school_onboardings.select(&:incomplete?).any? %>
    <p>Schools onboarding: <%= school_group.school_onboardings.select(&:incomplete?).count %>
    <table class="table table-sorted">
      <thead>
        <tr>
          <th>School name</th>
          <th>Contact email</th>
          <th>Last activity</th>
          <th>last event</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% school_group.school_onboardings.select(&:incomplete?).each do |onboarding| %>
          <tr>
            <td><%= onboarding.school_name %></td>
            <td><%= onboarding.contact_email %> <%= link_to 'Change', edit_admin_school_onboarding_email_path(onboarding), class: 'btn btn-warning btn-sm' if onboarding.has_only_sent_email_or_reminder? %></td>
            <td><%= nice_date_times(onboarding.events.maximum(:created_at)) %></td>
            <td><%= SchoolOnboardingEvent.events.key(onboarding.events.maximum(:event)).try(:humanize) %></td>
            <td>
              <div class="btn-group">
                <%= button_to 'Send reminder email', admin_school_onboarding_reminder_path(onboarding), class: 'btn btn-warning btn-sm' %>
                <% if onboarding.school %>
                  <%= button_to 'Mark as complete', admin_school_onboarding_events_path(onboarding, event: :onboarding_complete), class: 'btn btn-sm' %>
                <% else %>
                  <%= link_to 'Edit configuration', edit_admin_school_onboarding_configuration_path(onboarding), class: 'btn btn-sm' %>
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p>No schools are onboarding for <%= school_group.name %></p>
  <% end %>
<% end %>


<h2>Completed schools</h2>

<table class="table table-sorted">
  <thead>
    <tr>
      <th>School name</th>
      <th>Contact email</th>
      <th>Onboarded at event</th>
    </tr>
  </thead>
  <tbody>
    <% @completed_schools.each do |onboarding| %>
      <tr>
        <td><%= onboarding.school_name %></td>
        <td><%= onboarding.contact_email %></td>
        <td><%= nice_date_times(onboarding.events.maximum(:created_at)) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
