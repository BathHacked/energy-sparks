<ul class="nav nav-tabs mb-2 preview-tabs" id="<%= scope %>-content-preview" role="tablist">
  <li class="nav-item">
    <a class="nav-link active" href="#<%= scope %>-content" id="content-tab" data-toggle="tab"  role="tab" aria-controls="<%= scope %>-content" aria-selected="true">Page</a>
  </li>
  <li class="nav-item">
    <a class="nav-link preview-tab" href="#<%= scope %>-preview" id="<%= scope %>-preview-tab" data-toggle="tab"  role="tab" aria-controls="<%= scope %>-preview">Preview</a>
  </li>
</ul>

<div class="tab-content" id="<%= scope %>-content-preview-panes">

  <div class="tab-pane fade show active" id="<%= scope %>-content" role="tabpanel" aria-labelledby="<%= scope %>-content-tab">
    <%= yield %>
  </div>

  <div class="tab-pane fade" id="<%= scope %>-preview" role="tabpanel" aria-labelledby="<%= scope %>-preview-tab" data-content-url="<%= preview_url %>">
    <div class="loading">
      <h3 class="mb-3 mt-3"><%= fa_icon('spinner') %> Loading...</h3>
    </div>
    <div class="content pt-3 pb-3">
    </div>
  </div>
</div>
