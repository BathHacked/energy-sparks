<ul class="nav nav-tabs mb-2 preview-tabs" id="<%= scope %>-content-preview" role="tablist">
  <li class="nav-item">
    <a class="nav-link active" href="#<%= scope %>-content" id="<%= scope %>-content-tab" data-toggle="tab"  role="tab" aria-controls="<%= scope %>-content" aria-selected="true">
      <span class="text-danger d-none"><%= fa_icon('exclamation-triangle') %></span>
      Content
    </a>
  </li>
  <li class="nav-item">
    <a class="nav-link" href="#<%= scope %>-timings" id="<%= scope %>-timings-tab" data-toggle="tab"  role="tab" aria-controls="<%= scope %>-timings" aria-selected="true">
      <span class="text-danger d-none"><%= fa_icon('exclamation-triangle') %></span>
      Timings
    </a>
  </li>
  <li class="nav-item">
    <a class="nav-link preview-tab" href="#<%= scope %>-preview" id="<%= scope %>-preview-tab" data-toggle="tab"  role="tab" aria-controls="<%= scope %>-preview">
      Preview
    </a>
  </li>
</ul>

<div class="tab-content" id="<%= scope %>-content-panes">

  <div class="tab-pane fade show active" id="<%= scope %>-content" role="tabpanel" aria-labelledby="<%= scope %>-content-tab">
    <%= yield %>
  </div>

  <div class="tab-pane fade show" id="<%= scope %>-timings" role="tabpanel" aria-labelledby="<%= scope %>-timings-tab">
    <%= content.input :"#{scope}_start_date", label: 'Start date', include_blank: true, start_year: 2019 %>
    <%= content.input :"#{scope}_end_date", label: 'End date', include_blank: true, start_year: 2019 %>
  </div>

  <div class="tab-pane fade" id="<%= scope %>-preview" role="tabpanel" aria-labelledby="<%= scope %>-preview-tab" data-content-url="<%= preview_url %>">
    <div class="loading">
      <h3 class="mb-3 mt-3"><%= fa_icon('spinner') %> Loading...</h3>
    </div>
    <div class="content pt-3 pb-3">
    </div>
  </div>
</div>
