<% content_for :page_title, "Alert Type - Schools" %>

<h1>Schools for:</h1>
<h2><%= @alert_type.title %></h2>

<p><%= link_to 'Manage exceptions', edit_multiple_admin_alert_type_school_alert_type_exceptions_path(@alert_type) %></p>

<!--   edit_multiple_admin_alert_type_school_alert_type_exceptions GET    /admin/alert_types/:alert_type_id/school_alert_type_exceptions/edit_multiple(.:format)        admin/alert_types/school_alert_type_exceptions#edit_multiple
update_multiple_admin_alert_type_school_alert_type_exceptions PUT    /admin/alert_types/:alert_type_id/school_alert_type_exceptions/update_multiple(.:format)      admin/alert_types/school_alert_type_exceptions#update_multiple -->

<% if @alert_type.school_alert_type_exceptions.any? %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>School</th>
        <th>Reason</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @alert_type.school_alert_type_exceptions.each do |school_alert_type_exception| %>
        <tr>
          <td><%= school_alert_type_exception.school.name %></td>
          <td><%= school_alert_type_exception.reason %></td>
          <td><%= link_to 'Delete', '#' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>No school exceptions for this alert</p>
<% end %>
