<h3>General</h3>
<%= form.input :description, hint: 'Only used in the admin interface' %>
<%= form.input :rating_from, input_html: {min: 0, max: 10, step: 0.1}, hint: '0.0 to 10.0, alert ratings will be rounded to nearest decimal place'%>
<%= form.input :rating_to, input_html: {min: 0, max: 10, step: 0.1}, hint: '0.0 to 10.0, alert ratings will be rounded to nearest decimal place'%>

<%= form.simple_fields_for :content, content do |content| %>
  <%= content.input :colour, as: :select, collection: FindOutMoreTypeContentVersion.colours.keys, include_blank: false, hint: 'For the background on dashboards' %>

  <ul class="nav nav-tabs" id="content-preview" role="tablist">
    <li class="nav-item">
      <a class="nav-link active" href="#content" id="content-tab" data-toggle="tab"  role="tab" aria-controls="content" aria-selected="true">Content</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" href="#preview" id="preview-tab" data-toggle="tab"  role="tab" aria-controls="preview">Preview</a>
    </li>
  </ul>

  <div class="tab-content" id="content-preview-panes">
    <div class="tab-pane fade show active" id="content" role="tabpanel" aria-labelledby="content-tab">
      <%= render 'admin/alert_types/variables_accordion', template_variables: template_variables %>
      <%= content.input :teacher_dashboard_title, hint: 'Shows on teacher dashboards' %>
      <%= content.input :pupil_dashboard_title, hint: 'Shows on pupil dashboards' %>
      <%= content.input :page_title, hint: 'Main title at top of Find Out More Page' %>
      <%= content.input :page_content, as: :trix_editor, hint: 'Main body copy for Find Out More Page' %>
    </div>

    <div class="tab-pane fade" id="preview" role="tabpanel" aria-labelledby="preview-tab" data-content-url="<%= admin_alert_type_find_out_more_preview_path %>">
      <div class="loading">
        <h3 class="mb-3 mt-3"><%= fa_icon('spinner') %> Loading...</h3>
      </div>
      <div class="content pt-3 pb-3">
      </div>
    </div>
  </div>

<% end %>
