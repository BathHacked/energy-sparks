<h1>AMR Data feed configuration</h1>
<h2>for <%= @configuration.description %></h2>

<%= @configuration.id %>
<%= simple_form_for :preview, url: admin_amr_data_feed_readings_path, method: :post, remote: true do |f| %>
  <%= f.hidden_field :amr_data_feed_config_id, value: @configuration.id %>
  <%= f.input :csv_file, as: :file %>
  <%= f.submit 'Preview' %>
<% end %>


