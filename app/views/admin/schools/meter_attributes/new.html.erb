<div class="row justify-content-md-center">
  <div class="col col-md-10 col-lg-8">
    <h1>New attribute: <%= @meter_attribute_type.attribute_name %></h1>
    <p><%= @meter_attribute_type.attribute_description %></p>
    <%= simple_form_for :attribute, url: admin_school_meter_attributes_path(@school), html: { novalidate: false } do |form| %>
      <%= form.hidden_field :meter_id, value: params[:meter_id] %>
      <%= render 'shared/meter_attributes/new_form', form: form, meter_attribute_type: @meter_attribute_type %>
    <% end %>
  </div>
</div>
