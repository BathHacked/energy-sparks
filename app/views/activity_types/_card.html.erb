<div class="card activity mb-2">
  <div class="card-header">
    <% if local_assigns[:based_on] %>
      <span class="small">Based on <%= local_assigns[:based_on] %></span>
    <% end %>

  </div>
  <div class="card-body">
    <%= link_to activity_type_path(activity_type) do %>
    <%= "#{activity_type.name} (#{activity_type.key_stage_list})" %>
    <% end %>

  </div>
  <div class="card-footer">
    <span class="btn rounded-pill">
      <strong>
        <%= activity_type.score %><span class="small"> POINTS</span>
      </strong>
      /
      <span class="key-stages"><%= activity_type.key_stage_list %></span>
    </span>
  </div>
</div>
