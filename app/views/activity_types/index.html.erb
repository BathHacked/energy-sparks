<h1>Activities</h1>
<div class="container">
<div class="row">
<table class="table table-condensed">
  <thead>
    <tr>
      <th scope="col">Category</th>
      <th scope="col">Name</th>
      <th scope="col">Score</th>
      <th scope="col">Enabled?</th>
      <th scope="col" colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @activity_types.each do |activity_type| %>
      <tr class="<%= active(activity_type.active) %>" scope="row" >
        <td><%= activity_type.activity_category.name %></td>
        <td><%= link_to activity_type.name, activity_type_path(activity_type) %></td>
        <td><%= activity_type.score %></td>
        <td><%= activity_type.active %></td>
        <td><%= link_to 'Edit', edit_activity_type_path(activity_type), class: 'btn btn-primary btn-sm' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

</div>
<div class="container">
<div class="row">
  <%= link_to 'New Activity', new_activity_type_path, class: 'btn btn-primary' %>
</div>
</div>