<%= form_for(activity_type) do |f| %>
    <% if activity_type.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(activity_type.errors.count, "error") %> prohibited this activity from being saved:</h2>

          <ul>
            <% activity_type.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :activity_category_id %>
      <%= f.select(
              :activity_category_id,
              options_from_collection_for_select(
                  ActivityCategory.all, 'id', 'name', @activity_type.activity_category_id),
              {include_blank: false},
              {class: 'form-control'}
          )
      %>
    </div>


    <div class="form-group">
      <%= f.label :description %>
      <%= f.hidden_field :description %>
      <trix-editor input="activity_type_description"></trix-editor>
    </div>

    <div class="form-group">
      <%= f.label :score %>
      <%= f.text_field :score, class: 'form-control' %>
    </div>


    <div class="form-group">
      <%= f.label :badge_name %>
      <%= f.text_field :badge_name, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :active %>
      <%= f.check_box :active, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label "Repeatable?" %>
      <%= f.check_box :repeatable, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label "Uses data?" %>
      <%= f.check_box :data_driven, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label "Custom ('Other')?" %>
      <%= f.check_box :custom, class: 'form-control' %>
    </div>

    <h2>Key Stages</h2>

      <%= f.collection_check_boxes(:key_stage_ids, ActsAsTaggableOn::Tag.all.order(:name), :id, :name) do |b| %>
        <%= b.label(class:"label-checkbox") { b.check_box + b.text } %>
    <% end %>

    <h2>Suggested Next Activities</h2>
    <table>
      <thead>
        <tr>
          <th>Id</th>
          <th>Delete?</th>
        </tr>
      </thead>
      <tbody>
      <%= f.fields_for :activity_type_suggestions do |suggestion| %>
          <tr>
            <td>
              <%= suggestion.collection_select :suggested_type_id, ActivityType.all, :id, :name, include_blank: true, class: 'form-control' %>
            </td>
            <td>
              <%= suggestion.check_box :_destroy, class: 'form-control' %>
            </td>
          </tr>
      <% end %>
      </tbody>
    </table>


    <div class="actions">
      <%= f.submit class: 'btn btn-primary' %>
    </div>
<% end %>
