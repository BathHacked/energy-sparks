<% unless case_studies.empty? %>
  <div class=" mt-3">
    <div class="application container">

      <h2>Case studies</h2>
      <div class="card-deck">
        <% case_studies.each do |case_study| %>
          <div class="card">
            <div class="card-header bg-positive"><%= case_study.title %></div>
            <div class="card-body">
              <div class="card-text">
                <%= case_study.description %>
              </div>
            </div>
            <div class="card-footer">
              <%= link_to url_for(case_study.file), class: 'btn btn-primary' do %>
                Download <i class="fas fa-file-download"></i>
              <% end%>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
