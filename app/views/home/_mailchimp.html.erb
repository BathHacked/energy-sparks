<div class="application container mailchimp">
  <div class="row pt-5">
    <div class="col-7 pr-5">
      <h2>Stay up to date&hellip;</h2>
      <div class="card-deck">
        <div class="card mb-3">
          <%= image_tag("stay-up-to-date/field.png", class: "img-fluid") %>
          <div class="card-body">
            <h5 class="card-title"><a href="https://us16.campaign-archive.com/?u=a132136ec1fca0e5b19fbe63d&id=9ac7c33816">Welcome Back to Energy Sparks!</a></h5>
          </div>
        </div>
        <div class="card mb-3">
          <%= image_tag("stay-up-to-date/leaves.png", class: "img-fluid") %>
          <div class="card-body">
            <h5 class="card-title">Welcome Back to Energy Sparks!</h5>
          </div>
        </div>
        <div class="card mb-3">
          <%= image_tag("stay-up-to-date/panels.png", class: "img-fluid") %>
          <div class="card-body">
            <h5 class="card-title">Welcome Back to Energy Sparks!</h5>
          </div>
        </div>
      </div>
    </div>
    <div class="col-5 border-left ">
      <h4>Get the latest news from Energy Sparks in your inbox</h4>
      <form>
        <div class="form-group">
          <label for="exampleInputEmail1">Your email address</label>
          <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="example@example.com">
          <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
        </div>
        <div class="d-flex justify-content-center">
          <button class="btn btn-dark-blue">Sign up</button>
        </div>
      </form>
    </div>
  </div>
</div>



